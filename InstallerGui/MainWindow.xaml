<Window x:Class="PerformanceMonitorInstallerGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Performance Monitor Installer"
        Height="700" Width="800"
        MinHeight="600" MinWidth="700"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#333333"
        Foreground="#FFFFFF">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Performance Monitor Installer"
                       FontSize="24" FontWeight="Bold"
                       Foreground="{DynamicResource AccentBrush}"/>
            <TextBlock Text="SQL Server Performance Monitoring by Darling Data, LLC"
                       FontSize="12"
                       Foreground="{DynamicResource ForegroundMutedBrush}"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Connection Section -->
        <GroupBox Grid.Row="1" Header="Connection" Margin="0,0,0,15"
                  BorderBrush="{DynamicResource BorderBrush}"
                  Foreground="{DynamicResource ForegroundBrush}">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Server -->
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Server:" VerticalAlignment="Center"
                           Margin="0,0,10,10"/>
                <TextBox Grid.Row="0" Grid.Column="1"
                         x:Name="ServerTextBox"
                         Height="28" Margin="0,0,10,10"
                         TextChanged="ConnectionParameter_Changed"
                         ToolTip="SQL Server instance name (e.g., localhost, SERVER\INSTANCE)"/>
                <Button Grid.Row="0" Grid.Column="2"
                        x:Name="TestConnectionButton"
                        Content="Test Connection"
                        Width="120" Height="28"
                        Margin="0,0,0,10"
                        Click="TestConnection_Click"/>

                <!-- Authentication -->
                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="Authentication:" VerticalAlignment="Center"
                           Margin="0,0,10,10"/>
                <StackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                            Orientation="Horizontal" Margin="0,0,0,10">
                    <RadioButton x:Name="WindowsAuthRadio"
                                 Content="Windows Authentication"
                                 GroupName="Auth" IsChecked="True"
                                 Checked="AuthType_Changed"
                                 Margin="0,0,20,0"
                                 Foreground="{DynamicResource ForegroundBrush}"/>
                    <RadioButton x:Name="SqlAuthRadio"
                                 Content="SQL Server Authentication"
                                 GroupName="Auth"
                                 Checked="AuthType_Changed"
                                 Foreground="{DynamicResource ForegroundBrush}"/>
                </StackPanel>

                <!-- Username -->
                <TextBlock Grid.Row="2" Grid.Column="0"
                           x:Name="UsernameLabel"
                           Text="Username:" VerticalAlignment="Center"
                           Margin="0,0,10,10"
                           IsEnabled="False" Opacity="0.5"/>
                <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"
                         x:Name="UsernameTextBox"
                         Height="28" Margin="0,0,0,10"
                         TextChanged="ConnectionParameter_Changed"
                         IsEnabled="False"/>

                <!-- Password -->
                <TextBlock Grid.Row="3" Grid.Column="0"
                           x:Name="PasswordLabel"
                           Text="Password:" VerticalAlignment="Center"
                           Margin="0,0,10,10"
                           IsEnabled="False" Opacity="0.5"/>
                <PasswordBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"
                             x:Name="PasswordBox"
                             Height="28" Margin="0,0,0,10"
                             PasswordChanged="ConnectionParameter_Changed"
                             IsEnabled="False"/>

                <!-- Encryption -->
                <TextBlock Grid.Row="4" Grid.Column="0"
                           Text="Encryption:" VerticalAlignment="Center"
                           Margin="0,0,10,10"/>
                <ComboBox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2"
                          x:Name="EncryptionComboBox"
                          Height="28" Margin="0,0,0,10"
                          SelectedIndex="1"
                          SelectionChanged="ConnectionParameter_Changed"
                          ToolTip="Connection encryption mode">
                    <ComboBoxItem Content="Optional" Tag="Optional"/>
                    <ComboBoxItem Content="Mandatory" Tag="Mandatory"/>
                    <ComboBoxItem Content="Strict" Tag="Strict"/>
                </ComboBox>

                <!-- Trust Server Certificate -->
                <TextBlock Grid.Row="5" Grid.Column="0"
                           Text="Trust certificate:" VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <CheckBox Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2"
                          x:Name="TrustCertificateCheckBox"
                          Content="Trust server certificate"
                          IsChecked="False"
                          VerticalAlignment="Center"
                          Foreground="{DynamicResource ForegroundBrush}"
                          Checked="ConnectionParameter_Changed"
                          Unchecked="ConnectionParameter_Changed"
                          ToolTip="Trust the server certificate without validation"/>
            </Grid>
        </GroupBox>

        <!-- Options Section -->
        <GroupBox Grid.Row="2" Header="Options" Margin="0,0,0,15"
                  BorderBrush="{DynamicResource BorderBrush}"
                  Foreground="{DynamicResource ForegroundBrush}">
            <StackPanel Margin="10">
                <!-- Warning Banner -->
                <Border Background="#5C2626"
                        BorderBrush="#F44336"
                        BorderThickness="2"
                        CornerRadius="4"
                        Padding="12"
                        Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="&#x26A0;"
                                   FontSize="28"
                                   Foreground="#F44336"
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,0"/>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="WARNING: Clean install will DROP the existing"
                                       FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="PerformanceMonitor database and ALL collected data."
                                       FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="This action CANNOT be undone!"
                                       FontWeight="Bold" Foreground="#F44336"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Clean Install Checkbox -->
                <CheckBox x:Name="CleanInstallCheckBox"
                          Content="Perform clean install (drop existing database)"
                          Margin="0,0,0,10"
                          Foreground="{DynamicResource ForegroundBrush}"/>

                <!-- Reset Schedule Checkbox -->
                <CheckBox x:Name="ResetScheduleCheckBox"
                          Content="Reset collection schedule to recommended defaults"
                          Margin="0,0,0,10"
                          Foreground="{DynamicResource ForegroundBrush}"/>

                <!-- Validation Checkbox -->
                <CheckBox x:Name="ValidationCheckBox"
                          Content="Run validation after install (recommended)"
                          IsChecked="True"
                          Foreground="{DynamicResource ForegroundBrush}"/>
            </StackPanel>
        </GroupBox>

        <!-- Installation Log -->
        <GroupBox Grid.Row="3" Header="Installation Log"
                  BorderBrush="{DynamicResource BorderBrush}"
                  Foreground="{DynamicResource ForegroundBrush}">
            <RichTextBox x:Name="LogTextBox"
                         IsReadOnly="True"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         Background="{DynamicResource BackgroundDarkBrush}"
                         Foreground="{DynamicResource ForegroundBrush}"
                         BorderThickness="0"
                         Margin="5"
                         FontFamily="Consolas"
                         FontSize="12">
                <RichTextBox.Document>
                    <FlowDocument>
                        <Paragraph>
                            <Run Text="Ready to install. Enter connection details and click Install to begin."/>
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox.Document>
            </RichTextBox>
        </GroupBox>

        <!-- Progress Bar -->
        <Grid Grid.Row="4" Margin="0,15,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <ProgressBar x:Name="ProgressBar"
                         Grid.Column="0"
                         Height="20"
                         Minimum="0" Maximum="100" Value="0"
                         Background="{DynamicResource BackgroundDarkBrush}"
                         Foreground="{DynamicResource AccentBrush}"/>
            <TextBlock x:Name="ProgressText"
                       Grid.Column="1"
                       Text="0%"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"
                       MinWidth="40"/>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="InstallButton"
                    Content="Install"
                    Width="100" Height="32"
                    Margin="0,0,10,0"
                    Click="Install_Click"
                    Style="{StaticResource AccentButton}"/>
            <Button x:Name="TroubleshootButton"
                    Content="Troubleshoot"
                    Width="100" Height="32"
                    Margin="0,0,10,0"
                    Click="Troubleshoot_Click"
                    IsEnabled="False"/>
            <Button x:Name="ViewReportButton"
                    Content="View Report"
                    Width="100" Height="32"
                    Margin="0,0,10,0"
                    Click="ViewReport_Click"
                    IsEnabled="False"/>
            <Button x:Name="CloseButton"
                    Content="Close"
                    Width="100" Height="32"
                    Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
